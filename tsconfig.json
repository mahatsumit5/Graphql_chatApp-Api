{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["ES2022"],
    "target": "ES2022",
    "strict": false,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "codegen.ts",
    "src/types/**.ts",
    "test_data.js",
    "prisma/**"
  ]
}
